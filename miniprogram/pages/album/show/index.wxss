.container {
    padding: 22rpx 22rpx 20rpx 22rpx;
}

.photowall {
    width: 100%;
    margin-top: 22rpx;
    margin-bottom: 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    align-content: space-around;
    flex-wrap: wrap;
}

.tile {
    width: 345rpx;
    height: 345rpx;
    margin-bottom: 21rpx;
    background-color: #FBE864;
    background-position: center center;
    background-size: cover;
    overflow: hidden;
}

.tile__create {
    width: 345rpx;
    height: 345rpx;
    margin-bottom: 21rpx;
    background-color: rgba(255, 255, 255, .5);
    display: flex;
    justify-content: center;
    align-items: center;
}

.tile__image {
    width: 50%;
    height: 50%;
}

.loading-container {
    height: 120rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.tabbar {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 110rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    background-color: #9F8BE5;
    opacity: .9;
}

.tabbar .tab {
    width: 50rpx;
    height: 50rpx;
}
