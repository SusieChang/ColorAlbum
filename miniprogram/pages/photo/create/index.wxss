/* miniprogram/pages/photo/create/index.wxss */
.container {
    width: 100%;
    height: 100vh;
    overflow-y: hidden;
}

.draw-container {
    width: 100%;
    height: 100vh;
    padding-bottom: 60rpx;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
}

.placehoder {
    height: 120rpx;
    width: 100%;
    padding-top: 20rpx;
    background: none;
    font-size: 13px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-direction: column;
}

.create-btn {
    bottom: 200rpx;
}

.border-control {
    position: absolute;
    top: 0;
    width: 120rpx;
    height: 120rpx;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: distribute;
    justify-content: space-around;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-radius:50%;
    background-color: #fff;
    -webkit-border-radius:50%;
    -moz-border-radius:50%;
    -ms-border-radius:50%;
    -o-border-radius:50%;
}

.border-control .icon, .rechoose-icon, .album-selector .icon {
    width: 45rpx;
    height: 45rpx;
}


.control-panel {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 930rpx;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: distribute;
    justify-content: space-around;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    transform: translateY(810rpx);
    -webkit-transform: translateY(810rpx);
    -moz-transform: translateY(810rpx);
    -ms-transform: translateY(810rpx);
    -o-transform: translateY(810rpx);
    opacity: 0;
}

.panel-content {
    position: absolute;
    top: 60rpx;
    width: 100%;
    height: 880rpx;
    padding: 0 40rpx 0 40rpx;
    background-color: rgba(255, 255, 255, .94);
    color: #9F8BE5;
    overflow-y: scroll;
}

.section {
    margin-bottom: 30rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}


.section:nth-child(1) {
    margin-top: 80rpx;
    margin-bottom: 40rpx;
    font-size: 14px;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.section:nth-child(1) .choose-text {
    display: flex;
    align-items: center;
    justify-content: center;
}

.section:nth-child(1) .restart-text {
    display: flex;
    align-items: center;
    justify-content: center;
}

.section--title {
    display: inline-block;
    text-align: center;
    width: 30%;
    padding-left: 30rpx;
    box-sizing: border-box;
}

.section--body {
    width: 70%;
    padding-right: 30rpx;
    box-sizing: border-box;
}

.album-selector {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-right: 24rpx;
}