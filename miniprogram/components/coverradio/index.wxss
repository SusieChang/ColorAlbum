/* components/coverradio/index.wxss */
.radio-group {
    width: 100%;
    height: 20px;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.radio {
    display: flex;
    justify-content: center;
    align-items: center;
}

.circle {
    box-sizing: border-box;
    width: 18px;
    height: 18px;
    border-radius:50%;
    border: 2px solid #9F8BE5;
    background-color: #fff;
    -webkit-border-radius:50%;
    -moz-border-radius:50%;
    -ms-border-radius:50%;
    -o-border-radius:50%;
}
.circle.checked {
    background-color: #9F8BE5;
}

