/* components/coverinput/index.wxss */
.cover-input {
    position: relative;
    width: 100%;
    height: 28px;
    line-height: 28px;
    padding-left: 15rpx;
    padding-right: 15rpx;
    background-color: rgba(255, 255, 255, .7);
    overflow: hidden;
}

.text {
    width: 100%;
    height: 28px;
    line-height: 28px;
}

.input {
    width: 100%;
    height: 30px;
    line-height: 28px;
    /* margin-top为text的高度，保持视觉上一致 */
    margin-top: -28px;
    z-index: 999;
}